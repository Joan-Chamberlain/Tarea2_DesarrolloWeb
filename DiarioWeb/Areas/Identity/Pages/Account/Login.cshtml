@page
@model LoginModel

@{
  ViewData["Title"] = "Iniciar sesión";
  Layout = "../_AuthLayout.cshtml";
}

<div class="col-md-10 offset-md-1">
  <section>
    <form id="account" method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Input.Email" class="form-label"></label>
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Input.Password" class="form-label"></label>
        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
      </div>
      <div>
        <div class="form-group form-check">
          <label asp-for="Input.RememberMe" class="form-check-label">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            ¿Recordar mi cuenta?
          </label>
        </div>
      </div>
      <div>
        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar sesión</button>
      </div>
      <div>
        <p>
          <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidó su contraseña?</a>
        </p>
      </div>
    </form>
  </section>
</div>

<div class="col-md-10 offset-md-1">
  <section>
    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
      <div>
        <p>O inicia sesión con:</p>
        <button type="submit" class="btn btn-outline-dark" name="provider" value="Google" title="Inicia sesión con tu cuenta de Google">
          <img width="20px" style="margin-bottom:3px; margin-right:5px" alt="Google sign-in" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" />
          Google
        </button>
      </div>
    </form>
  </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
