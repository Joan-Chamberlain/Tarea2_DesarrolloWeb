@model Post

<article class="blog-post">
    <h3>@Model.Titulo <small>@Model.Fecha.ToString("dd/MM/yyyy")</small></h3>
    <div style="display: flex; justify-content: center;">
        <div class="ratio" style="width: 40vw; height: 22vw; display: flex; justify-content: center; align-items: center;">
            <img src="data:image/png;base64,@Convert.ToBase64String(Model.Imagen)" alt="Imagen" class="img-fluid" style="object-fit: cover; width: 100%; height: 100%;" />
        </div>
    </div>
    <p>
        @Html.Raw(Model.Texto)
    </p>
    <div class="callout">
        <ul class="menu simple">
            <li><a href="#">Autor: @Model.Author.FirstName @Model.Author.LastName</a></li>
            <li><a href="#">Comentarios: CommentsCount</a></li>
        </ul>
    </div>
</article>
