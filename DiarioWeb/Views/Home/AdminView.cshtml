@using DiarioWeb.Models
@using DiarioWeb.Models.ViewModels

@{
  var Model = ViewData["Users"] as UserListViewModel;
  var Roles = ViewData["Roles"] as List<string>;
}

<html>
  <head>
    <meta charset="utf-8" />
  </head>
  <body>
    <h1>
      Lista de usuarios del blog
    </h1>

    <table class="table">
      <tr>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Rol</th>
        <th></th>
        <th></th>
      </tr>
      @for (int i = 0; i < Model.Name.Length; i++)
      {
        <tr>
          <td>@Model.Name[i]</td>
          <td>@Model.Email[i]</td>
          <td>@Model.Role[i]</td>
          <td>
            <form asp-action="ActualizarUsuario" method="get">
              <input type="hidden" name="Email" value="@Model.Email[i]">
              <button type="submit" class="btn btn-success">Editar</button>
            </form>
          </td>
          <td>
            <form asp-action="EliminarUsuario">
              <input type="hidden" name="Email" value="@Model.Email[i]">
              <button type="submit" class="btn btn-danger">Eliminar</button>
            </form>
          </td>
        </tr>
      }
    </table>
  </body>
</html>
