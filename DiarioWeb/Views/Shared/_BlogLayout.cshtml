@{
  Layout = "/Views/Shared/_Layout.cshtml";

    var categoryManager = new DiarioWeb.Utility.CategoryManager();

    var categorias = categoryManager.ObtenerCategorias();

    ViewData["Categorias"] = categorias;

}

<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8"/>
  </head>

  <body>
    <div class="container">
      <div class="row border-bottom pb-3">
        <div class="col text-center">
          <h1>Diario Web de Joan y Adrián</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-10 border-end pe-3">
          @RenderBody()
        </div>
        <div class="col-2">
                <h2>Autores</h2>
                <ul>
                    @foreach (var user in Model)
                    {
                        <li><a href="@Url.Action("PostsByAuthor", "Posts", new { author = user.Id })">@user.FirstName</a></li>
                    }
                </ul>
                <br/>
                <h2>Categorias :</h2>
                <ul>
                    @foreach (var item in ViewData)
                    {
                        <li>
                            @item.Key:
                            @if (item.Value is List<string> stringList)
                            {
                                <ul>
                                    @foreach (var value in stringList)
                                    {
                                        <li><a href="@Url.Action("PostsByCategorie", "Posts", new { categorie = value })">@value<a/></li>
                                    }
                                </ul>  
                            }
                            else
                            {
                                @item.Value
                            }
                        </li>
                    }
                </ul>
        </div>
      </div>
    </div>
  </body>
</html>