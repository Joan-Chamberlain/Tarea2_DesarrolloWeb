@using DiarioWeb.Models
@using DiarioWeb.Models.ViewModels

@model EditUserViewModel

<html>
  <head>
    <meta charset="utf-8">
    <title>Edit User</title>
  </head>

  <body>
    <h1>Editar al usuario</h1>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-action="ActualizarUsuario" autocomplete="off" enctype="multipart/form-data" method="post">
      <input asp-for="Email" type="hidden" value="@Model.Email" />
      <div class="form-group">
        <label> Nombre </label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger "></span>
      </div>

      <div class="form-group">
        <label> Apellidos </label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger "></span>
      </div>

      <div class="form-group mt-2">
        <label>Rol del usuario</label>
        <select asp-for="Role" class="form-control">
          <option value="">Seleccione un rol</option>
          @foreach (var role in ViewData["Roles"] as List<string>)
          {
            <option value="@role">@role</option>
          }
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
      </div>

      <div>
        <button type="submit" class="mt-5">Guardar cambios</button>
      </div>
    </form>
  </body>
</html>