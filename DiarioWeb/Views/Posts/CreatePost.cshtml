@using DiarioWeb.Models
@using DiarioWeb.Models.ViewModels

@model PostViewModel

<html>
<head>
  <meta charset="utf-8">
  <title>Post</title>
</head>

<body>
  <h1>Crear Post</h1>

  <div asp-validation-summary="ModelOnly" class="text-danger"></div>

  <form asp-action="CreatePost" autocomplete="off" enctype="multipart/form-data">
    <div class="form-group">
      <label> Título del post </label>
      <input asp-for="Titulo" class="form-control" />
      <span asp-validation-for="Titulo" class="text-danger "></span>
    </div>

    <div class="form-group mt-2">
      <label>Categoría del post</label>
      <select asp-for="Categoria" class="form-control">
        <option value="">Seleccione una categoría</option>
        @foreach (var categoria in ViewData["Categorías"] as List<string>)
        {
          <option value="@categoria">@categoria</option>
        }
      </select>
      <span asp-validation-for="Categoria" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label>Contenido del post:</label>
      <textarea asp-for="Texto" class="form-control" rows="10" required style="resize: none;"></textarea>
      <span asp-validation-for="Texto" class="text-danger "></span>
    </div>

    <div class="form-group">
      <label for="Imagen">Imagen para el post:</label><br />
      <input asp-for="Imagen" type="file" class="my-3" accept="image/jpeg, image/png">
    </div>

    <div>
      <button type="submit" class="mt-5">Crear Post</button>
    </div>
  </form>
</body>
</html>