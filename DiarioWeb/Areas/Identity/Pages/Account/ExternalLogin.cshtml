@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<h1>Registro</h1>
<h2 id="external-login-title">Terminemos de configurar tu cuenta de @Model.ProviderDisplayName</h2>
<hr />

<div class="row">
  <div class="col-md-4">
    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group mb-3">
        <label asp-for="Input.Email">Correo electrónico</label>
        <input asp-for="Input.Email" class="form-control" autocomplete="email" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
      </div>
      <div class="form-group mb-3">
        <label asp-for="Input.FirstName">Nombre</label>
        <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" aria-required="true" />
        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
      </div>
      <div class="form-group mb-3">
        <label asp-for="Input.LastName">Apellido</label>
        <input asp-for="Input.LastName" class="form-control" autocomplete="family-name" aria-required="true" />
        <span asp-validation-for="Input.LastName" class="text-danger"></span>
      </div>

      <button type="submit" class="w-100 btn btn-primary">Register</button>
    </form>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
