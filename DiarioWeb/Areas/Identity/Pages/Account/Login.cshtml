@page
@model LoginModel

@{
  ViewData["Title"] = "Iniciar sesión";
  Layout = "../_AuthLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Usa tu cuenta para acceder</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            ¿Recordar mi cuenta?
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar sesión</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidó su contraseña?</a>
                    </p>
                    <p>
                        <!--<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>-->
                    </p>
                </div>
            </form>
        </section>
    </div>

  <div class="col-md-6 col-md-offset-2">
    <section>
      <h3>O accede con otra cuenta</h3>
      <hr />
      @{
        if ((Model.ExternalLogins?.Count ?? 0) == 0)
        {
          <div>
            <p>
              No hay servicios de autenticación externa configurados. Consulta este <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                artículo
                sobre cómo configurar esta aplicación ASP.NET para admitir el inicio de sesión a través de servicios externos
              </a>.
            </p>
          </div>
        }
        else
        {
          <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
            <div>
              <p>
                @foreach (var provider in Model.ExternalLogins!)
                {
                  <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Inicia sesión usando tu cuenta de @provider.DisplayName">@provider.DisplayName</button>
                }
              </p>
              <p>O inicia sesión con:</p>
              <button type="submit" class="btn btn-danger" name="provider" value="Google" title="Inicia sesión con tu cuenta de Google">Google</button>
              <button type="submit" class="btn btn-primary" name="provider" value="Facebook" title="Inicia sesión con tu cuenta de Facebook">Facebook</button>
              <button type="submit" class="btn btn-info" name="provider" value="Microsoft" title="Inicia sesión con tu cuenta de Microsoft">Microsoft</button>
            </div>
          </form>
        }
      }
    </section>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
